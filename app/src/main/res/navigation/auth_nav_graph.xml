<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/auth_nav_graph"
    app:startDestination="@id/getStartedFragment"
    >

    <fragment
        android:id="@+id/getStartedFragment"
        android:name="com.teletalker.app.features.authentication.presentation.fragments.get_start.GetStartFragment"
        android:label="fragment_get_start"
        tools:layout="@layout/fragment_get_start"
        >
        <action
            android:id="@+id/action_getStartedFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            />
        <action
            android:id="@+id/action_getStartedFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.teletalker.app.features.authentication.presentation.fragments.login.LoginFragment"
        android:label="loginFragment"
        tools:layout="@layout/fragment_login"
        >
        <action
            android:id="@+id/action_loginFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>

    <fragment
        android:id="@+id/registerFragment"
        android:name="com.teletalker.app.features.authentication.presentation.fragments.register.RegisterFragment"
        android:label="registerFragment"
        tools:layout="@layout/fragment_register"
        >
        <action
            android:id="@+id/action_registerFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
    </fragment>

</navigation>