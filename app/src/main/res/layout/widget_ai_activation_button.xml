<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <!-- Background Animation Layer 3 (Outermost) -->
    <View
        android:id="@+id/backgroundLayer3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:alpha="0.1"
        android:background="@drawable/ai_background_layer_3"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/mainButton"
        app:layout_constraintEnd_toEndOf="@+id/mainButton"
        app:layout_constraintStart_toStartOf="@+id/mainButton"
        app:layout_constraintTop_toTopOf="@+id/mainButton" />

    <!-- Background Animation Layer 2 (Middle) -->
    <View
        android:id="@+id/backgroundLayer2"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:alpha="0.2"
        android:background="@drawable/ai_background_layer_2"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/mainButton"
        app:layout_constraintEnd_toEndOf="@+id/mainButton"
        app:layout_constraintStart_toStartOf="@+id/mainButton"
        app:layout_constraintTop_toTopOf="@+id/mainButton" />

    <!-- Background Animation Layer 1 (Innermost) -->
    <View
        android:id="@+id/backgroundLayer1"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:alpha="0.3"
        android:background="@drawable/ai_background_layer_1"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/mainButton"
        app:layout_constraintEnd_toEndOf="@+id/mainButton"
        app:layout_constraintStart_toStartOf="@+id/mainButton"
        app:layout_constraintTop_toTopOf="@+id/mainButton" />

    <!-- Main Button Container -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/ai_main_button_background"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Bot Icon -->
        <ImageView
            android:id="@+id/botIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginTop="8dp"
            android:contentDescription="AI Bot Icon"
            android:src="@drawable/ic_bot_inactive"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

        <!-- Status Text -->
        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="8dp"
            android:text="Activate AI"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/botIcon" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>