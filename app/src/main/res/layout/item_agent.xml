<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/agentCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="24dp"
    android:layout_marginVertical="6dp"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/darkMidnightBlue"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:rippleColor="@color/purple_700"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Agent Avatar -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/avatarContainer"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:cardCornerRadius="25dp"
            app:cardElevation="2dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/agentAvatar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_agent_default"
                tools:src="@drawable/ic_agent_default" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Status Indicator -->
        <View
            android:id="@+id/statusIndicator"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            android:background="@drawable/status_indicator_active"
            app:layout_constraintBottom_toBottomOf="@+id/avatarContainer"
            app:layout_constraintEnd_toEndOf="@+id/avatarContainer" />

        <!-- Agent Name -->
        <TextView
            android:id="@+id/agentName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/agentRadioButton"
            app:layout_constraintStart_toEndOf="@+id/avatarContainer"
            app:layout_constraintTop_toTopOf="@+id/avatarContainer"
            tools:text="English Agent" />

        <!-- Agent Type and Language -->
        <LinearLayout
            android:id="@+id/tagContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toStartOf="@+id/agentRadioButton"
            app:layout_constraintStart_toEndOf="@+id/avatarContainer"
            app:layout_constraintTop_toBottomOf="@+id/agentName">

            <TextView
                android:id="@+id/agentType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/tag_background"
                android:backgroundTint="@color/purple_700"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:textColor="@color/white"
                android:textSize="10sp"
                android:textStyle="bold"
                tools:text="ENGLISH" />

            <TextView
                android:id="@+id/agentLanguage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="6dp"
                android:background="@drawable/tag_background"
                android:backgroundTint="@color/darkMidnightBlue"
                android:paddingHorizontal="8dp"
                android:paddingVertical="2dp"
                android:textColor="@color/white"
                android:textSize="10sp"
                app:drawableStartCompat="@drawable/ic_language"
                app:drawableTint="@color/white"
                tools:text="English" />

        </LinearLayout>

        <!-- Agent Description -->
        <TextView
            android:id="@+id/agentDescription"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:alpha="0.8"
            app:layout_constraintEnd_toStartOf="@+id/agentRadioButton"
            app:layout_constraintStart_toEndOf="@+id/avatarContainer"
            app:layout_constraintTop_toBottomOf="@+id/tagContainer"
            tools:text="Advanced AI agent specialized in English communication with natural language processing capabilities." />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/agentTags"
            app:chipSpacing="4dp"
            app:singleLine="false"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textColor="@color/white"
            android:textSize="13sp"
            android:alpha="0.8"
            app:layout_constraintEnd_toEndOf="@+id/agentDescription"
            app:layout_constraintStart_toStartOf="@+id/agentDescription"
            app:layout_constraintTop_toBottomOf="@+id/agentDescription"
            />

        <!-- Selection Radio Button -->
        <RadioButton
            android:id="@+id/agentRadioButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@drawable/radio_button_selector"
            android:clickable="false"
            android:focusable="false"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>