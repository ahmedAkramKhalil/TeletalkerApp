<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" >
    <data>
        <variable
            name="call"
            type="com.teletalker.app.features.home.fragments.callhistory.data.models.CallEntity" />
        <variable
            name="isPlaying"
            type="boolean" />
        <variable
            name="viewModel"
            type="com.teletalker.app.features.home.fragments.home.presentation.HomeViewModel" />
    </data>

    <com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="12dp"
    app:strokeWidth="0dp"
    android:layout_marginTop="10dp"
    app:cardBackgroundColor="@color/darkMidnightBlue"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="22dp"
        >

        <ImageView
            android:id="@+id/callStateImg"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            tools:src="@drawable/ic_call_outgoing"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nameTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="4dp"
            tools:text="Gladys"
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintStart_toEndOf="@+id/callStateImg"
            app:layout_constraintTop_toTopOf="@+id/callStateImg" />

        <TextView
            android:id="@+id/numberTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="00323233"
            android:textColor="@color/black"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="@+id/nameTv"
            app:layout_constraintTop_toBottomOf="@+id/nameTv" />

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView6"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardBackgroundColor="@color/gunmetalGray"
            app:cardCornerRadius="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:strokeWidth="0dp">


            <ImageView
                android:id="@+id/icPlayRecorde"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                app:onPlaybackClick="@{call}"
                app:playbackState="@{call}"
                tools:src="@drawable/ic_big_play" />

        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/materialCardView7"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="8dp"
            app:cardBackgroundColor="@color/gunmetalGray"
            app:cardCornerRadius="12dp"
            app:layout_constraintBottom_toBottomOf="@+id/materialCardView6"
            app:layout_constraintEnd_toStartOf="@+id/materialCardView6"
            app:layout_constraintTop_toTopOf="@+id/materialCardView6"
            app:strokeWidth="0dp">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:src="@drawable/ic_sound" />


        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/durationTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            tools:text="1.30"
            android:textColor="@color/lightTurquoise"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/materialCardView7"
            app:layout_constraintEnd_toStartOf="@+id/materialCardView7"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</com.google.android.material.card.MaterialCardView>
    </layout>